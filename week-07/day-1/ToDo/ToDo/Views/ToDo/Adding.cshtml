@model List<ToDo.Models.ToDoClass>

<html xmlns="http://www.w3.org/1999/xhtml">
    <head>
        <title>Add ToDo</title>
    </head>
    <body>
        <form action="/todo" method="post">
            <fieldset>
                <legend>New ToDo input:</legend>
                <div>
                    <input type="hidden" id="ID" value="" />
                </div>
                <div>
                    <label for="User">ToDo:</label>
                    <input type="text" toDo="ToDo" value="" />
                </div>
                <br />
                <div>
                    <input type="checkbox" />
                    <label for="User">Is Urgent?</label>
                    <input type="checkbox" />
                    <label for="User">Is It Done?</label>
                </div>
                <p>
                    <input type="submit" value="Create New!" />
                </p>
            </fieldset>
        </form>
    </body>
</html>
