@model CiaoAdios.Model.Greeting
@{ Random random = new Random(); }
<!DOCTYPE HTML>
<html xmlns:th="http://www.thymeleaf.org">
<head>
    <title>Getting Started: Serving Web Content</title>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
</head>
<body>
    <p>
    <span style="color: rgb(@(random.Next(0, 255)), @(random.Next(0, 255)), @(random.Next(0, 255))); text-align: middle; font-size: (@(random.Next(0,5)))*12px ">
        Can I just say: @Model.content!
    </span>
    </p>
</body>
</html>